@model IEnumerable<OdeToFood.Datas.Models.Restaurant>

@{
    ViewBag.Title = "Index";

}

<header class="head-container">
    <h2>My Restaurants</h2>

    <button class="neon-button small pad">
        @Html.ActionLink("Create New", "Create")
    </button>
</header>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    <div class="container">
        <div class="row justify-content-between">

        

            @foreach (var item in Model)

            {
            <div class="col-auto mx-auto">


                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src=" @Url.Content(@item.ImageUrl)" alt="Card image cap">

                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "neon-button small" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "neon-button small" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "neon-button small" })
                    </div>
                </div>
            </div>

            }
        </div>
    </div>

</table>

